{\n  
  "manifest_version": 3,\n  "name": "Your Extension Name",\n  "version": "1.0",\n  "description": "Description of your extension.",\n  "permissions": [\n    "storage"\n  ],\n  \
  "background": {\n    "service_worker": "background.js"  // Note: module type removed \n  },\n  \
  "content_scripts": [\n    {\n      "matches": ["<all_urls>"],\n      "js": ["content.js"]\n    }\n  ],\n  \
  "action": {\n    "default_popup": "popup.html",\n    "default_icon": "icon.png"\n  },\n  \
  "web_accessible_resources": [\n    {\n      "resources": ["resource.html"],\n      "matches": ["<all_urls>"]\n    }\n  ],\n  \
  "content_security_policy": {\n    "extension_pages": "script-src 'self'; object-src 'self'" // Updated CSP directives \n  }\n}